@using GreenApp.Model

@model IList<Nonprofit>


<div class="d-flex flex-row-reverse">
    <div class="p-3">
        <button class="btn btn-light btn-lg" onclick="location.href='@Url.Action("AddNonprofit", "Nonprofit")'">Hozzáadás</button>
    </div>

    <div class="p-3">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</div>
@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
@if (TempData["ErrorMessage"] != null)
{
    <p class="alert alert-danger" id="errorMessage">@TempData["ErrorMessage"]</p>
}
@if (Model == null || !Model.Any())
{
    <div class="contentText">Jelenleg nincsenek nonfprofit szervezetek.</div>
}
else
{

    <div class="pt-5">
        @for (Int32 i = 0; i < Model.Count; i++)
        {
            <div class="row challenges mb-5 shadow-sm pb-2 pt-3">
                <div class="col-md-9">
                    <div class="row">
                        <h3> @Model[i].Name </h3>
                        <p class="ml-auto mr-3"> Összegyűjtött pénz: @Model[i].CollectedMoney </p>
                    </div>                   
                    <div class="row">
                        <img class="img-fluid" src="@Url.Action("NonprofitImage", "Nonprofit", new { id = @Model[i].Id })" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row d-flex justify-content-center py-3">
                        @if (Model[i].Disabled)
                        {
                            <form method="post" asp-controller="Nonprofit" asp-action="Enable" asp-route-id="@Model[i].Id">
                                <button type="submit" class="btn btn-success">Engedélyezés</button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-controller="Nonprofit" asp-action="Disable" asp-route-id="@Model[i].Id">
                                <button type="submit" class="btn btn-danger">Letiltás</button>
                            </form>
                        }
                    </div>
                    <div class="row d-flex justify-content-center">
                        <form method="post" asp-controller="Nonprofit" asp-action="Delete" asp-route-id="@Model[i].Id">

                            <span id="confirmDeleteSpan_@Model[i].Id" style="display:none">
                                <span>Biztosan ki akarja törölni?</span>
                                <button type="submit" class="btn btn-danger">Igen</button>
                                <a href="#" class="btn btn-primary"
                                   onclick="confirmDelete('@Model[i].Id', false)">Nem</a>
                            </span>
                            <span id="deleteSpan_@Model[i].Id">
                                <a href="#" class="btn btn-danger"
                                   onclick="confirmDelete('@Model[i].Id', true)">Törlés</a>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        }

    </div>

}

@section Scripts
{
    <script>
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>
}