@using GreenApp.Model;
@model LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreenApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="bg2">    </div>
    <nav class="navbar mt-0">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img class="img-fluid" id="image" src="~/Images/logo.png" alt="">
        </a>
        <div class="text-right">
            <div class="navbar-inner">
                <button class="btn btn-light btn-lg" onclick="location.href='@Url.Action("Register", "Account")'">Regisztráció</button>
                <button class="btn btn-light btn-lg m-4" onclick="location.href='@Url.Action("Login", "Account")'">Bejelentkezés</button>
            </div>
        </div>
    </nav>
    <section id="cover" class="min-vh-50">
        <div id="cover-caption">
            <div class="container">
                <div class="row text-white">
                    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                        <h1 class="display-4 py-2 text-truncate">Bejelentkezés:</h1>
                        <div class="px-2">
                            <form asp-controller="Account" asp-action="Login" class="justify-content-center">
                                <div class="form-group">
                                    <h5 class="text-light text-center">Felhasználó név:</h5>
                                    <input class="form-control" asp-for="UserName" />
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <h5 class="text-light text-center">Jelszó:</h5>
                                    <input class="form-control" asp-for="UserPassword" />
                                    <span asp-validation-for="UserPassword"></span>
                                </div>
                                <div class="form-group">
                                    <h6 class="form-check-label px-4 text-light text-center" for="cb">
                                        <input id="cb" class="form-check-input" type="checkbox" asp-for="RememberLogin" />
                                        Bejelentkezés megjegyzése
                                    </h6>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
                                <button type="submit" class="btn btn-light btn-lg">Bejelentkezés</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

        @section Scripts
    {
            <partial name="_ValidationScriptsPartial" />
        }

</body>
</html>
